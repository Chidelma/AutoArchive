<div class="SearchHeader">
    <nav class="navbar navbar-inverse navbar-fixed-top" style="background-color:#303030;position:fixed;top:0;right:0;left:0;box-shadow:0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
        <div class="container-fluid">
            <a asp-area="" asp-controller="Home" asp-action="Results" class="navbar-brand"><img src="~/images/HEADER_LOGO.png" style="width:120px;height:50px" /></a>
            
            <div style="width:70%">
                <input id="ultSearch" type="text" name="ultSearch" data-toggle="collapse" data-target="#filters" class="form-control form-control-lg" placeholder="Search Auto Konnect" autocomplete="off" />
            </div>

            @await Html.PartialAsync("~/Views/Shared/_LoginPartial.cshtml")
        </div>
